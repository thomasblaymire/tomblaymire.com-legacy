{
	"name": "tomblaymire.com",
	"version": "1.0.0",
	"description": "Tom Blaymire | Web Developer | Leeds UK ",
	"main": "index.js",
	"scripts": {
		"dev": "next",
		"build": "next build",
		"start": "next start -p 8000",
		"export": "npm run build && next export",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"babel-plugin-styled-components": "^1.10.0",
		"babel-preset-es2015": "^6.24.1",
		"enzyme": "^3.8.0",
		"enzyme-to-json": "^3.3.5",
		"express": "^4.16.4",
		"jest": "^23.6.0",
		"next": "^7.0.2",
		"next-images": "^1.0.4",
		"prismic-javascript": "^2.0.1",
		"prismic-reactjs": "^0.3.2",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"react-inlinesvg": "^0.8.3",
		"styled-components": "^3.4.9"
	},
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"<rootDir>/.next/",
			"<rootDir>/node_modules/"
		],
		"transform": {
			".*": "babel-jest",
			"^.+\\.js?$": "babel-jest"
		},
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetsTransformer.js", "\\.(css|less)$": "<rootDir>/assetsTransformer.js"
		}
	},
	"//": "This is our babel config, I prefer this over a .babelrc file",
	"babel": {
		"env": {
			"development": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"production": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"test": {
				"presets": [
					[
						"next/babel",
						{
							"preset-env": {
								"modules": "commonjs"
							}
						}
					]
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			}
		}
	},
	"devDependencies": {
		"@zeit/next-typescript": "^1.1.1",
		"babel-jest": "^23.6.0",
		"babel-plugin-module-resolver": "^3.1.1",
		"enzyme-adapter-react-16": "^1.7.1",
		"react-addons-test-utils": "^15.6.2",
		"react-test-renderer": "^16.7.0"
	}
}
